
<InfoPanel>:
    rows:3
    spacing:20
    TravelingPanel:
        id:travel
        rows:2
        size_hint_y:1.2
    UserPanel:
        id:user
        rows:2
        size_hint_y:1
    AlarmPanel
        id:alarm
        rows:2
        size_hint_y:0.5
<TravelingPanel>:
