                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
                text:"Time"
                font_name:'times.ttf'
                font_size:self.width*0.25

                halign: 'left'
                valign: 'middle'
            Label:
                canvas.before:
                    Color:
                        rgba: root.colorborder
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
                text:"Elevator"
                font_name:'times.ttf'
                font_size:self.width*0.25

                halign: 'left'
                valign: 'middle'

        GridLayout:
            cols:5
            BoxLayout:
                size_hint_x:1.4
                orientation:'vertical'
                id:box1
                canvas.before:
                    Color:
                        rgba: root.colorborder
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
            BoxLayout:
                orientation:'vertical'
                id:box2
                canvas.before:
                    Color:
