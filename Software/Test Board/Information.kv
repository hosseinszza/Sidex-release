<InfoPanel>:

    spacing:20
    rows:2
    TravelingPanel:

        rows:2
    AlarmPanel:
        size_hint_y:0.5
        rows:2







<TravelingPanel>:
    box1:box1
    box2:box2
    box3:box3
    box4:box4
    box5:box5


    Label:
        size_hint_y:0.06
        canvas.before:
            Color:
                rgba: root.colorborder
            Line:
                width: 1
                rectangle: self.x, self.y, self.width, self.height
        canvas:
            Color:
                rgba: root.colorback
            Rectangle:
                pos: self.pos
                size: self.size
        text:"Passenger View"
        font_name:'times.ttf'
        font_size:self.height*0.75
        markup: True
        halign: 'left'
        valign: 'middle'
    GridLayout:
        rows:2
        canvas.before:
            Color:
                rgba: root.colorborder
            Line:
                width: 1
                rectangle: self.x, self.y, self.width, self.height
        GridLayout:
            cols:5
            size_hint_y:0.08
            Label:
                size_hint_x:1.4
                canvas.before:
                    Color:
                        rgba: root.colorborder
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
                text:"Status"
                font_name:'times.ttf'
                font_size:self.width*0.2

                halign: 'left'
                valign: 'middle'

            Label:
                canvas.before:
                    Color:
                        rgba: root.colorborder
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
                text:"Start"
                font_name:'times.ttf'
                font_size:self.width*0.25

                halign: 'left'
                valign: 'middle'
            Label:
                canvas.before:
                    Color:
                        rgba: root.colorborder
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
                text:"End"
                font_name:'times.ttf'
                font_size:self.width*0.25

                halign: 'left'
                valign: 'middle'
            Label:
                canvas.before:
                    Color:
                        rgba: root.colorborder
